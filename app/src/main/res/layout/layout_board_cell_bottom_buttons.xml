<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="postingAttributeData"
                type="com.withever.blind.ui.data.PostingAttributeData" />
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/community"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:background="#FFFFFF"
                app:layout_constraintEnd_toEndOf="@+id/textCommentsCount"
                app:layout_constraintStart_toEndOf="@+id/textCommentsCount">

            <com.withever.blind.widget.TImageView
                    android:id="@+id/imageThumbsUp"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/textThumbsUpCount"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_posting_list_like" />

            <com.withever.blind.widget.TTextView
                    android:id="@+id/textThumbsUpCount"
                    android:layout_width="38dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text='@{String.valueOf(postingAttributeData.likeCount)}'
                    android:textAlignment="textStart"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/section_01"
                    app:layout_constraintStart_toEndOf="@id/imageThumbsUp"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="206" />

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/section_01"
                    android:layout_width="2dp"
                    android:layout_height="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="18dp"
                    android:background="@color/gray_middle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/imageComment"
                    app:layout_constraintStart_toEndOf="@+id/textThumbsUpCount"
                    app:layout_constraintTop_toTopOf="parent" />

            <com.withever.blind.widget.TImageView
                    android:id="@+id/imageComment"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/textCommentsCount"
                    app:layout_constraintStart_toEndOf="@id/section_01"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_posting_list_comment" />

            <com.withever.blind.widget.TTextView
                    android:id="@+id/textCommentsCount"
                    android:layout_width="38dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text='@{String.valueOf(postingAttributeData.commentCount)}'
                    android:textAlignment="textStart"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/section_02"
                    app:layout_constraintStart_toEndOf="@+id/imageComment"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="550" />

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/section_02"
                    android:layout_width="2dp"
                    android:layout_height="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="18dp"
                    android:background="@color/gray_middle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/imageShared"
                    app:layout_constraintStart_toEndOf="@+id/textCommentsCount"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@android:drawable/dark_header" />

            <com.withever.blind.widget.TImageView
                    android:id="@+id/imageShared"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/textSharedCount"
                    app:layout_constraintStart_toEndOf="@id/section_02"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_posting_list_shared" />

            <com.withever.blind.widget.TTextView
                    android:id="@+id/textSharedCount"
                    android:layout_width="38dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text='@{String.valueOf(postingAttributeData.sharedCount)}'
                    android:textAlignment="textStart"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toEndOf="@id/imageShared"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="200" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_weight="9"
                android:background="#FFFFFF"
                android:gravity="center"
                android:orientation="horizontal"
                tools:visibility="visible">

            <com.withever.blind.widget.TImageView
                    android:id="@+id/imageBookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    app:srcCompat="@drawable/ic_posting_list_bookmark" />
        </LinearLayout>
    </LinearLayout>
</layout>