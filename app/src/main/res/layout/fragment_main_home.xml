<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp" android:layout_height="120dp"
            android:contentDescription="이미지를 표시할 수 없습니다."
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@+id/relativeborder"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher" tools:srcCompat="@mipmap/ic_launcher"/>
    <RelativeLayout
            android:id="@+id/relativeborder"
            android:layout_width="0dp" android:layout_height="40dp"
            android:background="#BFECF7" android:gravity="clip_vertical|center_vertical"
            app:layout_constraintBottom_toTopOf="@id/homeRecyclerView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/imageView4">

        <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginStart="20dp" android:text="인기순 정렬"
                android:textSize="16sp"/>
        <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_alignParentRight="true" android:layout_marginEnd="20dp"
                app:srcCompat="?attr/actionModeShareDrawable"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/homeRecyclerView"
            android:layout_width="0dp" android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/relativeborder"/>

