<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

        <data>
                <variable
                        name="postingSimple"
                        type="com.withever.blind.data.PostingSimpleData" />
                <variable
                        name="titleTest"
                        type="String" />
        </data>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintRowBoardCellParent"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:background="#FFFFFF"
                        android:orientation="vertical">

                        <TextView
                                android:id="@+id/textBoardCellTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="12dp"
                                android:text='@{titleTest}'
                                android:textColor="#000000"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                                android:id="@+id/textBoardCellCompany"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="5dp"
                                android:text="@{postingSimple.companyName}"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textBoardCellTitle" />

                        <TextView
                                android:id="@+id/textPanel01"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text=" l "
                                android:textColor="#B6B6B6"
                                android:textStyle="bold"
                                app:layout_constraintStart_toEndOf="@id/textBoardCellCompany"
                                app:layout_constraintTop_toBottomOf="@+id/textBoardCellTitle" />
"한글한글"

한글르르르
                        <TextView
                                android:id="@+id/textBoardCellNickName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@{postingSimple.userNickName}"
                                android:textColor="#FF9800"
                                android:textStyle="bold"
                                app:layout_constraintStart_toEndOf="@id/textPanel01"
                                app:layout_constraintTop_toBottomOf="@id/textBoardCellTitle" />

                        <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="93dp"
                                android:layout_height="93dp"
                                android:layout_marginTop="12dp"
                                android:layout_marginEnd="14dp"
                                android:scaleType="fitCenter"
                                android:visibility="visible"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/temp_main_cell"
                                tools:ignore="VectorDrawableCompat"
                                tools:visibility="visible" />

                        <TextView
                                android:id="@+id/textBoardCellContens"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="10dp"
                                android:text="@{postingSimple.contents}"
                                app:layout_constraintEnd_toStartOf="@id/imageView2"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/textBoardCellCompany" />

                        <ImageView
                                android:id="@+id/imageViewRead"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="14dp"
                                android:layout_marginTop="8dp"
                                app:layout_constraintHorizontal_chainStyle="packed"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/textBoardCellContens"
                                app:srcCompat="@drawable/temp_views" />

                        <TextView
                                android:id="@+id/textBoardCellWatchCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:layout_marginTop="11dp"
                                android:text='@{postingSimple.viewCount + "  ‧"}'
                                android:textSize="10sp"
                                app:layout_constraintHorizontal_chainStyle="packed"
                                app:layout_constraintStart_toEndOf="@id/imageViewRead"
                                app:layout_constraintTop_toBottomOf="@id/textBoardCellContens" />

                        <ImageView
                                android:id="@+id/imageViewTime"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="8dp"
                                app:layout_constraintEnd_toStartOf="@id/textBoardCellCreateTime"
                                app:layout_constraintStart_toEndOf="@id/textBoardCellWatchCount"
                                app:layout_constraintTop_toBottomOf="@+id/textBoardCellContens"
                                app:srcCompat="@drawable/temp_time" />

                        <TextView
                                android:id="@+id/textBoardCellCreateTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:layout_marginTop="11dp"
                                android:text='@{postingSimple.writeTime + "  ‧"}'
                                android:textSize="10sp"
                                app:layout_constraintHorizontal_chainStyle="packed"
                                app:layout_constraintStart_toEndOf="@id/imageViewTime"
                                app:layout_constraintTop_toBottomOf="@+id/textBoardCellContens" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:orientation="horizontal">

                        <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/constraintBoardCellBottomBottonsParent"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="2"
                                android:background="#FFFFFF">

                                <ImageView
                                        android:id="@+id/imageViewRead4"
                                        android:layout_width="26dp"
                                        android:layout_height="0dp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toStartOf="@id/textBoardCellWatchCount4"
                                        app:layout_constraintHorizontal_bias="0.1"
                                        app:layout_constraintHorizontal_chainStyle="packed"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:srcCompat="@drawable/temp_like_selected" />

                                <TextView
                                        android:id="@+id/textBoardCellWatchCount4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text='@{postingSimple.likeCount + "      I"}'
                                        android:textSize="12sp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toStartOf="@id/imageViewRead3"
                                        app:layout_constraintHorizontal_chainStyle="packed"
                                        app:layout_constraintStart_toEndOf="@id/imageViewRead4"
                                        app:layout_constraintTop_toTopOf="parent" />

                                <ImageView
                                        android:id="@+id/imageViewRead3"
                                        android:layout_width="26dp"
                                        android:layout_height="0dp"
                                        android:layout_marginStart="8dp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toStartOf="@+id/textBoardCellWatchCount3"
                                        app:layout_constraintHorizontal_chainStyle="packed"
                                        app:layout_constraintStart_toEndOf="@+id/textBoardCellWatchCount4"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:srcCompat="@drawable/temp_comment" />

                                <TextView
                                        android:id="@+id/textBoardCellWatchCount3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text='@{postingSimple.commentCount + "      I"}'
                                        android:textSize="12sp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toStartOf="@+id/imageViewRead2"
                                        app:layout_constraintHorizontal_chainStyle="packed"
                                        app:layout_constraintStart_toEndOf="@+id/imageViewRead3"
                                        app:layout_constraintTop_toTopOf="parent" />

                                <ImageView
                                        android:id="@+id/imageViewRead2"
                                        android:layout_width="26dp"
                                        android:layout_height="0dp"
                                        android:layout_marginStart="8dp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toStartOf="@id/textBoardCellWatchCount2"
                                        app:layout_constraintHorizontal_chainStyle="packed"
                                        app:layout_constraintStart_toEndOf="@id/textBoardCellWatchCount3"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:srcCompat="@drawable/temp_share" />

                                <TextView
                                        android:id="@+id/textBoardCellWatchCount2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text='@{postingSimple.sharedCount}'
                                        android:textSize="12sp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintHorizontal_chainStyle="packed"
                                        app:layout_constraintStart_toEndOf="@id/imageViewRead2"
                                        app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="1dp"
                                android:layout_weight="9"
                                android:background="#FFFFFF"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                        android:id="@+id/imageView3"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        app:srcCompat="@drawable/temp_bookmark_selected" />
                        </LinearLayout>
                </LinearLayout>
        </LinearLayout>
</layout>
